            modalClose1.addEventListener('click', hideBuyTicket)
            modal.addEventListener('click', hideBuyTicket)
            // cham ngoai vung buy ticket de out ra
            modalContainer.addEventListener('click', function (event) {
                event.stopPropagation()
            })
