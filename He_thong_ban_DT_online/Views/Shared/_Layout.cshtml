        <!-- javascrip slide show auto and not auto -->
        <script>
            var slideIndex = 0;
            var timer = null;
            showSlides(slideIndex);

            function plusSlides(n) {
                clearTimeout(timer);
                if (n == -1)
                    n = 0;
                showSlides(slideIndex += n);
            }

            function currentSlide(n) {
                clearTimeout(timer);
                showSlides(slideIndex = n);
            }

            function showSlides(n) {
                var i;
                var slides = document.getElementsByClassName("act_slideshow");
                var dots = document.getElementsByClassName("dot");
                if (n > slides.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = slides.length }
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                slideIndex++;
                if (slideIndex > slides.length) { slideIndex = 1 }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex - 1].style.display = "block";
                dots[slideIndex - 1].className += " active";
                timer = setTimeout(showSlides, 1000); // Change image every 2.5 seconds
            }
        </script>

        <!-- count down dt -->
        <script>
            var d = 2;  // ngày
            var h = 18; // Giờ
            var m = 39; // Phút
            var s = 10; // Giây
            var timeout = null;

            function countdown() {
                if (s === -1) {
                    m -= 1;
                    s = 59;
                }
                if (m === -1) {
                    h -= 1;
                    m = 59;
                }
                if (h === -1) {
                    d -= 1;
                    h = 23;
                }
                if (d === -1) {
                    clearTimeout();
                    return false;
                }
                if (d < 10)
                    document.getElementById("days").innerText = "0" + d.toString();
                else document.getElementById("days").innerText = d.toString();
                if (h < 10)
                    document.getElementById("hours").innerText = "0" + h.toString();
                else document.getElementById("hours").innerText = h.toString();
                if (m < 10)
                    document.getElementById("minutes").innerText = "0" + m.toString();
                else document.getElementById("minutes").innerText = m.toString();
                if (s < 10)
                    document.getElementById("seconds").innerText = "0" + s.toString();
                else document.getElementById("seconds").innerText = s.toString();

                timeout = setTimeout(function () {
                    s--;
                    //countdown;
                    window.onload = countdown();
                }, 1000);
            }
            window.onload = countdown();
        </script>

