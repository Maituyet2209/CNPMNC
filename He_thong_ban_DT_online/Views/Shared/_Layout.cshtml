        <script>
            const buyBtns = document.querySelectorAll(".btn_buy button")
            const modal = document.querySelector('.js-modal')
            const modalClose1 = document.querySelector('.js-modal-close')
            const modalContainer = document.querySelector('.js-modal-container')
            // function Show/hide buy tickets
            function showBuyTicket(event) {
                var buton = event.target;
                var box = buton.parentElement.parentElement;
                document.getElementById("name_buy").innerText = box.querySelectorAll('.name_sp span')[0].innerText + "//"
                    + box.querySelectorAll('.price span')[0].innerText;
                modal.classList.add('open')
            }
            function hideBuyTicket() {
                modal.classList.remove('open')
            }
            // lap tung button va ngh click
