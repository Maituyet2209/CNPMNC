@model He_thong_ban_DT_online.Models.SANPHAM

@{
    ViewBag.Title = "SuaSP";
    Layout = "~/Views/Shared/ADLayout.cshtml";
}
<style>
    h2 {
        text-align: center;
    }

    .form-horizontal {
        width: 100%;
    }

    .custom-form {
        justify-content: center;
        width: 100%;
    }

    .thongtinchung .form-group {
        margin-bottom: 15px;
    }

    .thongtinchung .control-label {
        font-weight: bold;
    }

    .thongtinchung .col-md-10 {
        padding-left: 0;
    }

    .thongtinchung .form-control {
        width: 100%;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555555;
        background-color: #ffffff;
        background-image: none;
        border: 1px solid #cccccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
    }

    .thongtinchung .form-group {
        display: flex;
    }

    .thongtinchung .text-danger {
        color: red;
    }

    .cotainer_ctspdt h5 {
        text-align: center;
    }

    .table {
        width: 100%;
        margin: 0 auto;
    }

        .table th,
        .table td {
            padding: 5px;
        }

    .form-control-unit {
        display: flex;
        align-items: center;
    }

        .form-control-unit .form-control {
            width: 70%;
        }

        .form-control-unit span {
            margin-left: 10px;
        }

    .form-area {
        width: 100%;
    }
</style>
<h2>SỬA THÔNG TIN SẢN PHẨM</h2>

@using (Html.BeginForm("SuaSP", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaSP)
    <div class="custom-form">
        <div class="thongtinchung">
            <div class="form-group">
                <label class="col-md-2 control-label">Tên điện thoại</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">
                    Mô tả
                </label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", style = "width: 100%;" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Hình sản phẩm</label>
