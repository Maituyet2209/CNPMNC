@model He_thong_ban_DT_online.Models.SANPHAM

@{
    ViewBag.Title = "ChiTietSP";
    Layout = "~/Views/Shared/ADLayout.cshtml";
}

<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #333;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -10px;
    }

    .col {
        flex-basis: calc(100% / 3 - 20px);
        max-width: calc(100% / 3 - 20px);
        margin: 10px;
    }

    /* Product detail styles */
    .product {
        border: 1px solid #ccc;
        padding: 20px;
    }

    .product__image {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .product__image img {
            max-width: 100%;
            height: auto;
        }

    .product__title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .product__price {
        font-size: 18px;
        font-weight: bold;
        color: #f00;
        margin-bottom: 10px;
    }

    .product__description {
        margin-bottom: 20px;
    }

    .product__specifications dt {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .product__specifications dd {
        margin-bottom: 10px;
    }
</style>
<div class="container">
    <h3 class="text-center">THÔNG TIN CHI TIẾT SẢN PHẨM</h3>
    <div class="row">
        <div class="col product mx-auto">
            <div class="product__image">
                <img src="~/Images/@Model.HinhMinhHoa" style="width:150px;" />
            </div>
            <h2 class="product__title">Tên điện thoại:@Html.DisplayFor(model => model.TenDT)</h2>
            <div class="product__price">Đơn giá @string.Format("{0:N0} VNĐ", Model.Dongia)</div>
            <div class="product__description">Mô tả:@Html.DisplayFor(model => model.MoTa)</div>
            <dl class="product__specifications">
                <dt>Màu sắc:</dt>
                <dd> @Html.DisplayFor(model => model.MauSac)</dd>

                <dt>Màn hình:</dt>
                <dd>@Html.DisplayFor(model => model.ManHinh)</dd>

                <dt>Cấu hình:</dt>
                <dd>@Html.DisplayFor(model => model.CauHinh)</dd>

                <dt>Bộ nhớ trong:</dt>
                <dd>@Html.DisplayFor(model => model.BoNhoTrong)</dd>

                <dt>Camera chính:</dt>
                <dd>@Html.DisplayFor(model => model.Camera_main)</dd>

                <dt>Hệ điều hành:</dt>
                <dd>@Html.DisplayFor(model => model.HeDieuHanh)</dd>
                <dt>Thẻ SIM:</dt>
                <dd> @Html.DisplayFor(model => model.TheSim)</dd>
                <dt>Pin:</dt>
                <dd> @Html.DisplayFor(model => model.DungLuongPin)</dd>
            </dl>
            <p>
                @Html.ActionLink("Edit", "SuaSP", new { id = Model.MaSP }) |
                @Html.ActionLink("Back to List", "SanPham")
            </p>
        </div>a
    </div>


