@using He_thong_ban_DT_online.Models
@model IEnumerable<SANPHAM>
@{
    ViewBag.Title = "Oppo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="flash_sale">
    <div class="header_content">
        <div class="text_content">
            <span>Oppo</span>
            <i class="fa-brands fa-apple"></i>
        </div>
    </div>
    <!-- Điện Thoại -->
    <div class="rowstyle">
        @foreach (var sanpham in Model)
        {
            <div class="col-sm-12 col-md-4 col-lg-3 box mr-0">
                <div class="box_img">
                    <a href="@Url.Action("Details", "HomePhone", new { id = sanpham.MaSP })">
                        <img src="~/images/@sanpham.HinhMinhHoa" alt="">
                    </a>
                </div>
                <div class="name_sp">
                    <span>@sanpham.TenDT</span>
                </div>
                <div class="price">
                    <span>@sanpham.Dongia</span>
                    <del>24.900.000đ</del>
                </div>
                <div class="btn_buy">
                    <button> Mua</button>
                    <button> +Giỏ Hàng </button>
                </div>
                <div class="number_sale">
                    <span>-6%</span>
                </div>
                <div class="star">
                    <i class="fas fa-star" aria-hidden="true"></i>
                    <i class="fas fa-star" aria-hidden="true"></i>
                    <i class="fas fa-star" aria-hidden="true"></i>
                    <i class="fas fa-star" aria-hidden="true"></i>
                    <i class="fas fa-star" aria-hidden="true"></i>
                    <p>11 đánh giá</p>
                </div>
            </div>
        }
    </div>
    <div class="more">
        <a href="">Xem Thêm</a>
    </div>
</div>


