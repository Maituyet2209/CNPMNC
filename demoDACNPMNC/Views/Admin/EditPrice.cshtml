﻿@model demoDACNPMNC.Models.SANPHAM

@{
    ViewBag.Title = "EditPrice";
    Layout = "~/Views/Shared/ADLayout.cshtml";
    <link href="~/Content/StyleHeaderFooter.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-JpCe93wF1GLMz8/+OVG2HIsZ0nnvWK2mhbKa0YFIm47RyJPvlK5vo5jo0p5iZa0LZj3qE55qxJjKXz3J/Zn3oA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

}
<style>
    .form_css {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        border: 1px solid blue;
        width: 300px;
        height: 200px;
        position: absolute;
        right: 230px;
        top: 50%;
        transform: translateY(-50%);
    }

    .form_center {
        text-align: center;
    }

        .form_center p {
            color: #bd0909;
        }

    .input_price_for_edit {
        margin-top: 10px;
    }

    button[type="submit"] {
        margin-top: 20px;
    }

    .title_black {
        color: black;
    }
</style>
<h3 style="text-align:center">SỬA GIÁ SẢN PHẨM</h3>
<div class="container-fluid">
    <div class="row align-items-center flex-wrap " style="margin-left:350px;">
        <div class="col-sm-12 col-md-4 col-lg-3 box mr-0">
            <div class="box_img">
                <a>
                    <img src='@Url.Content("~/images/" + ViewBag.HinhMinhHoa)' alt='@ViewBag.SanPhamName' />
                </a>
            </div>
            <div class="name_sp">
                <span>@ViewBag.SanPhamName</span>
            </div>
            <div class="price">
                <p class="title_black">Giá sản phẩm hiện tại</p>
                <span>@string.Format("{0:N0} đ", Double.Parse(ViewBag.DonGiaHienTai.ToString())) VNĐ</span>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form_css">
        <div class="form-group form_center">
            <p>Chỉnh sửa giá sản phẩm</p>
            <div class="input_price_for_edit" style="">
                @Html.EditorFor(model => model.Dongia, new { htmlAttributes = new { @class = "form-control", style = "width: 200px; color: blue; font-size: 16px;" } })
                @Html.ValidationMessageFor(model => model.Dongia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu
                </button>
            </div>
        </div>
    </div>
}