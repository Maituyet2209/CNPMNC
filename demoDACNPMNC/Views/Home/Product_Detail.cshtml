                if (lstCmt != null && lstCmt.Count > 0)
                {

                    foreach (var i in lstCmt)
                    {
                        var getProfile = db.profiles.FirstOrDefault(x => x.id_user == i.id_user) as demoDACNPMNC.Models.profile;
