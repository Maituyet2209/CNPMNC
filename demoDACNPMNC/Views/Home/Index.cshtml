@model IEnumerable<demoDACNPMNC.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHeaderFooter.cshtml";
}

<div class="slide_show">
    <div class="img_slideshow">
        <img src="~/images/11t-seriees-slideshow_act_4_11zon.png" />
    </div>
    <div class="right_slideshow">
        <img src="~/images/a52sRight_banner_3_11zon.png" />
        <img src="~/images/a52sRight_banner_3_11zon.png" />
    </div>
</div>

<div class="name_title">
    <span>Hot Sale</span>
</div>

<div class="rowstyle">
    @foreach (var i in Model)
    {
        <div class="box">
            @*, new { id = Model.Id }*@
            <a href="@Url.Action("Product_Detail", "Home", new { idProduct = i.MaDT})">
                <div class="box_img">
                    <img src="~/images/@i.Hinhminhhoa" alt="">
                </div>
            </a>
            <div class="name_sp">
                <span>@i.TenDT</span>
            </div>
            <div class="price">
                <span>@string.Format("{0:N0} đ", Double.Parse(@i.Dongia.ToString()))</span>
                <del>@string.Format("{0:N0} đ", Double.Parse(@i.Dongia.ToString()) * 1.2)</del>
            </div>
            <div class="btn_buy" style="display: flex;">
                <button> Mua</button>
                @*<button><a href="@Url.Action("ThemSanPhamVaoGio", "Cart", new {MaDT = i.MaDT })">+Giỏ Hàng </a> </button>*@
                @using (Html.BeginForm("ThemSanPhamVaoGio", "Cart", new {MaDT = i.MaDT }))
                {
                    <button>+Giỏ Hàng</button>
                }
            </div>
            <div class="number_sale">
                <span>-6%</span>
            </div>
            <div class="star">
                @*<i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>*@
                <p>@i.solanxem đánh giá</p>
            </div>
        </div>
    }
</div>

