
@{
    ViewBag.Title = "ShoppingInfo";
    Layout = "~/Views/Shared/_LayoutHeaderFooter.cshtml";
}

<style>

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>
<h2>Thông Tin Người Nhận</h2>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-8">
                <div class="card mb-3">
                    @using (Html.BeginForm("ShoppingInfo", "Home", FormMethod.Post))
                    {
                         if (Session["Profile"] != null)
                        {
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <input name="getName" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="@ViewBag.inputName"></input>

                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <input name="getEmail" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="@ViewBag.inputEmail">
                                    </input>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <input name="getPhone" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="@ViewBag.inputPhone ">
                                    </input>
                                </div>
                                <hr>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <input name="getAddress" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="@ViewBag.inputAddress">
                                    </input>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a class="btn btn-info " target="__blank" href="@Url.Action("CreatePayment", "Payment")">Thanh Toán PayPal</a>
                                        <a class="btn btn-info " target="__blank" href="@Url.Action("PayCOD", "Payment")">Thanh Toán Khi Nhận Hàng</a>
                                    </div>

                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <input name="getName" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="Nhập Tên Người Nhận"></input>

                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <input name="getEmail" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="Nhập Mail Người Nhận">
                                    </input>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <input name="getPhone" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="Nhập SĐT">
                                    </input>
                                </div>
                                <hr>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <input name="getAddress" class="col-sm-9 text-secondary" style="border: none; outline: none;" placeholder="Nhập Địa Chỉ Người Nhận">
                                    </input>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a class="btn btn-info " target="__blank" href="@Url.Action("CreatePayment", "Payment")">Thanh Toán PayPal</a>
                                        <a class="btn btn-info " target="__blank" href="@Url.Action("PayCOD", "Payment")">Thanh Toán Khi Nhận Hàng</a>
                                    </div>
                                </div>
                            </div>
                        }

                        <button type="submit">Xác Nhận Thông Tin</button>

                    }


                </div>
            </div>

        </div>
    </div>

